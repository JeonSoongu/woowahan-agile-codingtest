function solution(a, b) {
    let sum = 0;
    if (a === b) {
        return a;
    } else if (a > b) {
        for (let i = a; i >= b; i--) {
            sum += a;
            a = a-1;
        }
        return sum;
    } else {
        for (let i = a; i <= b; i++) {
            sum += a;
            a = a+1;
        }
        return sum;
    }
}
